<%layout("/boilerplate/bolier.ejs")%>

<body>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
    <h3>Add a New Item</h3>
    
    <form method="post" action="/sell" novalidate class="needs-validation" >
        <div class="mb-3"><label for="product" class="form-label">Product</label>
            <input name="product" placeholder="Product Name" class="form-control" type="text" required>
            <div class="invalid-feedback">Enter a correct Title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" placeholder="" class="form-control" required></textarea>
            <div class="invalid-feedback">Enter a correct Description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image </label>
            <input name="image" type="String" class="form-control" required>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="price" placeholder="enter price"  class="form-control" type="text" required>
            <div class="invalid-feedback">Enter a correct Price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="college" class="form-label">College</label>
            <input name="college" placeholder="enter college" class="form-control" type="text" required>
            <div class="invalid-feedback">Enter a correct College name</div>
        </div></div>
        <div class="mb-3 col-8">
            <label for="seller" class="form-label">category</label>
                  <select id="fruits" name="category" class="form-control">
                    <option value="" disabled selected>-- Select a category --</option>
                       <option value="buy">Buy</option>
                       <option value="exchange">Exchange</option>
                        <option value="rent">Rent</option>
                    </select>
            <div class="invalid-feedback">category not defined</div>
        </div>
        <br>
        <button class="btn btn-danger mb-5">Add</button>
    </form>
    </div>
    </div>
</body>